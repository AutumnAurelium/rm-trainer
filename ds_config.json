{
    "fp16": {
        "enabled": false
    },
    "bf16": {
        "enabled": true
    },
    "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": 2e-5,
            "betas": [0.9, 0.95],
            "weight_decay": 0.01,
            "torch_adam": true
        }
    },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 2e-5,
            "warmup_num_steps": 1000,
            "total_num_steps": 10000
        }
    },
    "zero_optimization": {
        "stage": 2,
        "contiguous_gradients": false,
        "overlap_comm": false,
        "reduce_scatter": true,
        "reduce_bucket_size": 1e8,
        "allgather_bucket_size": 1e8,
        "round_robin_gradients": true,
        "offload_optimizer": {
            "device": "none"
        },
        "offload_param": {
            "device": "none"
        }
    },
    "tensor_parallel": {
        "enabled": false,
        "tensor_parallel_degree": 2
    },
    "pipeline_parallel": {
        "enabled": false,
        "num_stages": 1
    },
    "gradient_accumulation_steps": "auto",
    "gradient_clipping": 1.0,
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": "auto",
    "flops_profiler": {
        "enabled": false
    },
    "wall_clock_breakdown": false,
    "comms_logger": {
        "enabled": true,
        "verbose": false
    }
} 